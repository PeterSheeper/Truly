{
  "manifest_version": 2,
  "author": "Truth seekers",
  "name": "Truly",
  "version": "1.0",
  "description": "Truly provides protection from fake news threats while you browse the web.",
  "icons": {
    "48": "Icons/logo-48.png",
    "96": "Icons/logo-96.png"
  },
  "web_accessible_resources":["TwitterParser/logo-48.png"],
  "content_scripts": [
    {
      "matches": ["*://twitter.com/*"],
      "js": ["TwitterParser/twitterify.js"],
	  "css": ["TwitterParser/tooltip.css"]
    }
  ],
  "options_ui": {
    "page": "Settings/options.html"
  },

  "permissions": ["storage"],

  "browser_specific_settings": {
    "gecko": {
      "id": "fakenews@truthseekers.edu"
	}
  },
  "background":{
	"scripts": ["background.js"]  
  },
  "browser_action":{
	  "default_icon":{
		"48":  "Icons/logo-48.png"
		},
	  "default_popup" : "MainPopup/popup.html",
	  "default_title" : "Check how fake are your news"
  }
}